<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomText" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/sf_pro_regular</item>
        <item name="android:spacing">0.001sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">@dimen/size_150dp</item>
        <item name="android:layout_height">@dimen/size_60dp</item>
        <item name="fontFamily">@font/sf_pro_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:spacing">0.001sp</item>
        <item name="backgroundTint">@color/button_default</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="backgroundTint">@color/black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:fontFamily">@font/sf_pro_regular</item>
        <item name="android:spacing">0.001sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/size_18sp</item>
        <item name="android:layout_marginLeft">@dimen/size_20dp</item>
        <item name="android:maxLength">30</item>
    </style>
</resources>